{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "marvel-rivals-mod-manager",
	"version": "0.1.0",
	"identifier": "com.marvel-rivals-mod-manager.app",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "marvel-rivals-mod-manager",
				"width": 800,
				"height": 600,
				"decorations": false,
				"minWidth": 800,
				"minHeight": 600
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": ["icons/mrLogo.png", "icons/mrLogo.ico"]
	}
}
